{% extends '::base.html.twig' %}

{% block body %}
    <div>
        <table class="table table-bordered table-hover table-condensed">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Team</th>
                    <th>Created at</th>
                </tr>
            </thead>
            <tbody>
            {% for task in tasks %}
                <tr>
                    <td>{{ task.id }}</td>
                    <td>{{ task.title }}</td>
                    <td>{{ task.author }}</td>
                    <td>{{ task.team }}</td>
                    <td>{{ task.getCreatedAt()|date("d-m-Y H:i:s") }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}


