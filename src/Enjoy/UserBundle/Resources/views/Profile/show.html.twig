{% extends '::base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('/bundles/enjoyuser/css/profile.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}
{% block javascript %}
    {{ parent() }}
    <script src="{{ asset('/bundles/enjoyuser/js/profile.js') }}" type="text/javascript"></script>
{% endblock %}
{% block body %}
    <div>
        <a href="{{ path('add_task') }}">
            Add task
        </a>
        |
        <a href="{{ path('logout') }}">
            Logout
        </a>
    </div>
    <div>
        <ul class="nav nav-tabs">
            <li class="active"><a href="#my-tasks" data-toggle="tab">My Tasks</a></li>
            <li><a href="#team-tasks" data-toggle="tab">Team Tasks</a></li>
        </ul>

        <div class="tab-content">
            <div class="tab-pane active" id="my-tasks">

            </div>
            <div class="tab-pane" id="team-tasks">
                <table class="table table-bordered table-hover table-condensed">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Title</th>
                        <th>Author</th>
                        <th>Team</th>
                        <th>Created at</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for task in tasks %}
                        <tr>
                            <td>{{ task.id }}</td>
                            <td>{{ task.title }}</td>
                            <td>{{ task.author }}</td>
                            <td>{{ task.team }}</td>
                            <td>{{ task.getCreatedAt()|date("d-m-Y H:i:s") }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="tab-pane" id="messages">...</div>
            <div class="tab-pane" id="settings">...</div>
        </div>
    </div>
{% endblock %}
