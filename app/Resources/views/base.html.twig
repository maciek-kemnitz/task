{# app/Resources/views/base.html.twig #}
<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>{% block title %}Task{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('/bundles/enjoytask/css/bootstrap.min.css') }}" type="text/css" rel="stylesheet" />
        {% endblock %}
        {% block javascript %}
            <script src="//ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
            <script src="{{ asset('/bundles/enjoytask/js/bootstrap.min.js') }}" type="text/javascript"></script>
        {% endblock %}
    </head>
    <body>
        <div class="container">
            {% block body %}{% endblock %}
        </div>
    </body>
</html>
